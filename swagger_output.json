    "/vouchers/apply": {
      "post": {
        "tags": ["Vouchers"],
        "summary": "Apply voucher to an order",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
