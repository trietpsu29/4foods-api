        "responses": {
          "200": {
            "description": "Reset code sent",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string", "example": "Reset code sent" }
              }
            }
          },
          "404": {
            "description": "User not found",
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string", "example": "User not found" }
              }
            }
          }
        }
      }
    },
    "/auth/reset-password": {
      "post": {
        "tags": ["Auth"],
        "summary": "Reset password using code",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["email", "code", "newPassword"],
              "properties": {
                "email": { "type": "string", "example": "triet@example.com" },
                "code": { "type": "string", "example": "1a2b3c" },
                "newPassword": { "type": "string", "example": "newpass123" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password updated",
            "schema": {
              "type": "object",
              "properties": {
                "message": { "type": "string", "example": "Password updated" }
              }
            }
          },
          "400": {
            "description": "Invalid or expired code",
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "Invalid or expired code"
                }
              }
            }
          }
        }
      }
    },
